        </ImageView>
        <ImageView fitHeight="43.0" fitWidth="43.0" layoutX="337.0" layoutY="44.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../icons/hotel-single-bed.png"/>
            </image>
        </ImageView>
        <Label layoutX="181.0" layoutY="268.0" text="Number of nights:"/>
        <Label fx:id="numberOfNightsLabel" layoutX="282.0" layoutY="266.0" prefHeight="17.0" prefWidth="78.0"
